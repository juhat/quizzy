<h1>Listing quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Good answer</th>
      <th>Bad answer</th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.question %></td>
        <td><%= quiz.good_answer %></td>
        <td><%= quiz.bad_answer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_topic_quiz_path %>
